[Unit]
Description=Airflow scheduler daemon
After=network.target

[Service]
EnvironmentFile=/etc/sysconfig/airflow
User=<%= @user %>
Group=<%= @group %>
ExecStart=<%= @bin_path %>/airflow scheduler --pid <%= @run_path %>/airflow-scheduler.pid --log-file <%= @log_path %>/airflow-scheduler.log --stdout <%= @log_path %>/airflow-scheduler.log --stderr <%= @log_path %>/airflow-scheduler.log
Restart=always

[Install]
WantedBy=multi-user.target