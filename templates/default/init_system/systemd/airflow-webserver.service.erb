[Unit]
Description=Airflow webserver daemon
After=network.target

[Service]
EnvironmentFile=/etc/sysconfig/airflow
User=<%= @user %>
Group=<%= @group %>
ExecStart=<%= @bin_path %>/airflow webserver --pid <%= @run_path %>/airflow-webserver.pid --log-file <%= @log_path %>/airflow-webserver.log --stdout <%= @log_path %>/airflow-webserver.log --stderr <%= @log_path %>/airflow-webserver.log
Restart=always

[Install]
WantedBy=multi-user.target